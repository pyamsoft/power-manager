<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pyamsoft.powermanager.presenter">

  <!-- To call dumpsys command for Doze -->
  <uses-permission
      android:name="android.permission.DUMP"
      tools:ignore="ProtectedPermissions"/>

  <!-- For WiFi -->
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
  <!-- For Data -->
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
  <!-- For Bluetooth -->
  <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
  <uses-permission android:name="android.permission.BLUETOOTH"/>
  <!-- For Sync -->
  <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
  <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

  <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

  <application>

    <service
        android:name=".trigger.TriggerRunnerService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerWifiEnableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerWifiDisableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerDataEnableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerDataDisableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerBluetoothEnableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerBluetoothDisableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerSyncEnableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerSyncDisableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerAirplaneEnableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerAirplaneDisableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerDozeEnableService"
        android:exported="false"/>

    <service
        android:name=".queuer.QueuerDozeDisableService"
        android:exported="false"/>

  </application>
</manifest>
