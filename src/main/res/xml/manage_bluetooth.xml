<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Bluetooth Settings">

    <SwitchPreferenceCompat
        android:defaultValue="@bool/manage_bluetooth_default"
        android:key="@string/manage_bluetooth_key"
        android:summary="@string/manage_bluetooth_summary"
        android:title="@string/manage_bluetooth_title"
        />

    <ListPreference
        android:defaultValue="@string/bluetooth_time_default"
        android:dependency="@string/manage_bluetooth_key"
        android:entries="@array/preset_delay_bluetooth_names"
        android:entryValues="@array/preset_delay_bluetooth_values"
        android:key="@string/preset_delay_bluetooth_key"
        android:summary="@string/bluetooth_time_summary"
        android:title="@string/bluetooth_time_title"
        />

    <com.pyamsoft.powermanager.app.manager.custom.ManagerDelayPreference
        android:key="@string/bluetooth_time_key"/>

  </PreferenceCategory>

  <PreferenceCategory
      android:title="Periodic Bluetooth Settings">

    <CheckBoxPreference
        android:defaultValue="@bool/periodic_bluetooth_default"
        android:dependency="@string/manage_bluetooth_key"
        android:key="@string/periodic_bluetooth_key"
        android:summary="@string/periodic_bluetooth_summary"
        android:title="@string/periodic_bluetooth_title"
        />

    <ListPreference
        android:defaultValue="@string/periodic_bluetooth_disable_default"
        android:dependency="@string/periodic_bluetooth_key"
        android:entries="@array/preset_periodic_bluetooth_disable_names"
        android:entryValues="@array/preset_periodic_bluetooth_disable_values"
        android:key="@string/preset_periodic_bluetooth_disable_key"
        android:summary="@string/periodic_bluetooth_disable_summary"
        android:title="@string/periodic_bluetooth_disable_title"
        />

    <com.pyamsoft.powermanager.app.manager.custom.ManagerPeriodicDisablePreference
        android:key="@string/periodic_bluetooth_disable_key"/>

  </PreferenceCategory>

</PreferenceScreen>