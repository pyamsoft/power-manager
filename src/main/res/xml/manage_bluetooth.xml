<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Bluetooth Settings">

    <!--suppress AndroidElementNotAllowed -->
    <SwitchPreferenceCompat
        android:defaultValue="@bool/manage_bluetooth_default"
        android:key="@string/manage_bluetooth_key"
        android:summaryOff="@string/manage_bluetooth_summary_unchecked"
        android:summaryOn="@string/manage_bluetooth_summary_checked"
        android:title="@string/manage_bluetooth_title"
        />

    <CheckBoxPreference
        android:defaultValue="@bool/ignore_charging_bluetooth_default"
        android:dependency="@string/manage_bluetooth_key"
        android:key="@string/ignore_charging_bluetooth_key"
        android:summary="@string/ignore_charging_bluetooth_summary"
        android:title="@string/ignore_charging_bluetooth_title"
        />

  </PreferenceCategory>

  <PreferenceCategory
      android:title="Bluetooth Delay">

    <ListPreference
        android:defaultValue="@string/bluetooth_time_default"
        android:dependency="@string/manage_bluetooth_key"
        android:entries="@array/preset_delay_bluetooth_names"
        android:entryValues="@array/preset_delay_bluetooth_values"
        android:key="@string/preset_delay_bluetooth_key"
        android:summary="@string/bluetooth_time_summary"
        android:title="@string/bluetooth_time_title"
        />

    <!--suppress AndroidElementNotAllowed -->
    <com.pyamsoft.powermanager.app.manager.preference.ManagerDelayPreference
        android:key="@string/bluetooth_time_key"/>

  </PreferenceCategory>

</PreferenceScreen>