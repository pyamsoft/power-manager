<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Doze Settings">

    <!--suppress AndroidElementNotAllowed -->
    <SwitchPreferenceCompat
        android:defaultValue="@bool/manage_wearable_default"
        android:key="@string/manage_wearable_key"
        android:summaryOff="@string/manage_wearable_summary_unchecked"
        android:summaryOn="@string/manage_wearable_summary_checked"
        android:title="@string/manage_wearable_title"
        />

    <ListPreference
        android:defaultValue="@string/wearable_time_default"
        android:dependency="@string/manage_wearable_key"
        android:entries="@array/preset_delay_wearable_names"
        android:entryValues="@array/preset_delay_wearable_values"
        android:key="@string/wearable_time_key"
        android:summary="@string/wearable_time_summary"
        android:title="@string/wearable_time_title"
        />

  </PreferenceCategory>

</PreferenceScreen>