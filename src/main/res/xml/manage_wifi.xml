<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Wifi Settings">

    <!--suppress AndroidElementNotAllowed -->
    <SwitchPreferenceCompat
        android:defaultValue="@bool/manage_wifi_default"
        android:key="@string/manage_wifi_key"
        android:summaryOff="@string/manage_wifi_summary_unchecked"
        android:summaryOn="@string/manage_wifi_summary_checked"
        android:title="@string/manage_wifi_title"
        />

    <CheckBoxPreference
        android:defaultValue="@bool/ignore_charging_wifi_default"
        android:dependency="@string/manage_wifi_key"
        android:key="@string/ignore_charging_wifi_key"
        android:summaryOff="@string/ignore_charging_wifi_summary_unchecked"
        android:summaryOn="@string/ignore_charging_wifi_summary_checked"
        android:title="@string/ignore_charging_wifi_title"
        />

  </PreferenceCategory>

  <PreferenceCategory
      android:title="Wifi Delay">

    <ListPreference
        android:defaultValue="@string/wifi_time_default"
        android:dependency="@string/manage_wifi_key"
        android:entries="@array/preset_delay_wifi_names"
        android:entryValues="@array/preset_delay_wifi_values"
        android:key="@string/preset_delay_wifi_key"
        android:summary="@string/wifi_time_summary"
        android:title="@string/wifi_time_title"
        />

    <!--suppress AndroidElementNotAllowed -->
    <com.pyamsoft.powermanager.app.preference.CustomTimeInputPreference
        android:key="@string/wifi_time_key"/>

  </PreferenceCategory>

</PreferenceScreen>