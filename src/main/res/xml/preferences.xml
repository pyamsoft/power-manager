<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Service Settings">

    <!--suppress AndroidElementNotAllowed -->
    <SwitchPreferenceCompat
        android:key="@string/boot_key"
        android:summary="@string/boot_summary"
        android:title="@string/boot_title"
        />

    <!--suppress AndroidElementNotAllowed -->
    <SwitchPreferenceCompat
        android:defaultValue="@bool/full_notification_default"
        android:key="@string/full_notification_key"
        android:summary="@string/full_notification_summary"
        android:title="@string/full_notification_title"
        />

    <CheckBoxPreference
        android:defaultValue="@bool/manage_wearable_default"
        android:key="@string/manage_wearable_key"
        android:summaryOff="@string/manage_wearable_summary_unchecked"
        android:summaryOn="@string/manage_wearable_summary_checked"
        android:title="@string/manage_wearable_title"
        />

  </PreferenceCategory>

  <PreferenceCategory
      android:title="System Settings">

    <Preference
        android:key="@string/battery_settings_key"
        android:summary="@string/battery_settings_summary"
        android:title="@string/battery_settings_title"/>

    <SwitchPreferenceCompat
        android:defaultValue="@bool/adview_default"
        android:key="@string/adview_key"
        android:summaryOff="@string/adview_summary_unchecked"
        android:summaryOn="@string/adview_summary_checked"
        android:title="@string/adview_title"
        />

  </PreferenceCategory>

  <PreferenceCategory
      android:title="Power Manager Settings">

    <Preference
        android:key="@string/upgrade_info_key"
        android:summary="@string/upgrade_info_summary"
        android:title="@string/upgrade_info_title"/>

    <Preference
        android:key="@string/clear_db_key"
        android:summary="@string/clear_db_summary"
        android:title="@string/clear_db_title"/>

    <Preference
        android:key="@string/clear_all_key"
        android:summary="@string/clear_all_summary"
        android:title="@string/clear_all_title"/>

  </PreferenceCategory>


</PreferenceScreen>