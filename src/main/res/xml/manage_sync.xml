<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Sync Settings">

    <!--suppress AndroidElementNotAllowed -->
    <SwitchPreferenceCompat
        android:defaultValue="@bool/manage_sync_default"
        android:key="@string/manage_sync_key"
        android:summaryOff="@string/manage_sync_summary_unchecked"
        android:summaryOn="@string/manage_sync_summary_checked"
        android:title="@string/manage_sync_title"
        />

    <CheckBoxPreference
        android:defaultValue="@bool/ignore_charging_sync_default"
        android:dependency="@string/manage_sync_key"
        android:key="@string/ignore_charging_sync_key"
        android:summaryOff="@string/ignore_charging_sync_summary_unchecked"
        android:summaryOn="@string/ignore_charging_sync_summary_checked"
        android:title="@string/ignore_charging_sync_title"
        />

  </PreferenceCategory>

  <PreferenceCategory
      android:title="Sync Delay">

    <ListPreference
        android:defaultValue="@string/sync_time_default"
        android:dependency="@string/manage_sync_key"
        android:entries="@array/preset_delay_sync_names"
        android:entryValues="@array/preset_delay_sync_values"
        android:key="@string/preset_delay_sync_key"
        android:summary="@string/sync_time_summary"
        android:title="@string/sync_time_title"
        />

    <!--suppress AndroidElementNotAllowed -->
    <com.pyamsoft.powermanager.app.preference.sync.SyncDelayPreference
        android:key="@string/sync_time_key"/>

  </PreferenceCategory>

</PreferenceScreen>