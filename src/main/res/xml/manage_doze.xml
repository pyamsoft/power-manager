<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Doze Settings">

    <!--suppress AndroidElementNotAllowed -->
    <SwitchPreferenceCompat
        android:defaultValue="@bool/doze_default"
        android:key="@string/manage_doze_key"
        android:summaryOff="@string/manage_doze_summary_unchecked"
        android:summaryOn="@string/manage_doze_summary_checked"
        android:title="@string/manage_doze_title"
        />

    <ListPreference
        android:defaultValue="@string/doze_time_default"
        android:dependency="@string/manage_doze_key"
        android:entries="@array/preset_delay_doze_names"
        android:entryValues="@array/preset_delay_doze_values"
        android:key="@string/doze_time_key"
        android:summary="@string/doze_time_summary"
        android:title="@string/doze_time_title"
        />

    <!--suppress AndroidElementNotAllowed -->
    <SwitchPreferenceCompat
        android:defaultValue="@bool/sensors_doze_default"
        android:dependency="@string/manage_doze_key"
        android:key="@string/sensors_doze_key"
        android:summaryOff="@string/sensors_doze_summary_unchecked"
        android:summaryOn="@string/sensors_doze_summary_checked"
        android:title="@string/sensors_doze_title"
        />

    <CheckBoxPreference
        android:defaultValue="@bool/ignore_charging_doze_default"
        android:dependency="@string/manage_doze_key"
        android:key="@string/ignore_charging_doze_key"
        android:summaryOff="@string/ignore_charging_doze_summary_unchecked"
        android:summaryOn="@string/ignore_charging_doze_summary_checked"
        android:title="@string/ignore_charging_doze_title"
        />

    <CheckBoxPreference
        android:defaultValue="@bool/exclusive_doze_default"
        android:dependency="@string/manage_doze_key"
        android:key="@string/exclusive_doze_key"
        android:summaryOff="@string/exclusive_doze_summary_unchecked"
        android:summaryOn="@string/exclusive_doze_summary_checked"
        android:title="@string/exclusive_doze_title"
        />

  </PreferenceCategory>

</PreferenceScreen>