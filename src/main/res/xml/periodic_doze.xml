<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Periodic Doze Settings">

    <!--suppress AndroidElementNotAllowed -->
    <com.pyamsoft.powermanager.app.preference.ViewSwitchPreferenceCompat
        android:defaultValue="@bool/periodic_doze_default"
        android:key="@string/periodic_doze_key"
        android:summaryOff="@string/periodic_doze_summary_unchecked"
        android:summaryOn="@string/periodic_doze_summary_checked"
        android:title="@string/periodic_doze_title"
        />

    <!--suppress AndroidElementNotAllowed -->
    <com.pyamsoft.powermanager.app.preference.ViewListPreference
        android:defaultValue="@string/periodic_doze_disable_default"
        android:dependency="@string/periodic_doze_key"
        android:entries="@array/preset_periodic_doze_names"
        android:entryValues="@array/preset_periodic_doze_values"
        android:key="@string/preset_periodic_doze_disable_key"
        android:summary="@string/periodic_doze_disable_summary"
        android:title="@string/periodic_doze_disable_title"
        />

    <!--suppress AndroidElementNotAllowed -->
    <com.pyamsoft.powermanager.app.preference.doze.DozeEnableTimePreference
        android:key="@string/periodic_doze_disable_key"/>

    <!--suppress AndroidElementNotAllowed -->
    <com.pyamsoft.powermanager.app.preference.ViewListPreference
        android:defaultValue="@string/periodic_doze_enable_default"
        android:dependency="@string/periodic_doze_key"
        android:entries="@array/preset_periodic_doze_names"
        android:entryValues="@array/preset_periodic_doze_values"
        android:key="@string/preset_periodic_doze_enable_key"
        android:summary="@string/periodic_doze_enable_summary"
        android:title="@string/periodic_doze_enable_title"
        />

    <!--suppress AndroidElementNotAllowed -->
    <com.pyamsoft.powermanager.app.preference.doze.DozeDisableTimePreference
        android:key="@string/periodic_doze_enable_key"/>

  </PreferenceCategory>

</PreferenceScreen>