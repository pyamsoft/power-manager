<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <FrameLayout
      android:id="@+id/detail_frame_image"
      android:layout_width="match_parent"
      android:layout_height="240dp"
      android:layout_alignParentTop="true"
      >

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/blank"
        android:scaleType="fitXY"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_down"
        />

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        />

  </FrameLayout>

  <!-- We pad here to prevent double padding in views
       Allow views to control their top and left padding individually
   -->
  <FrameLayout
      android:id="@+id/detail_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/detail_frame_image"
      android:paddingBottom="8dp"
      android:paddingEnd="8dp"
      android:paddingRight="8dp"
      />

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/detail_fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@id/detail_frame_image"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="-28dp"
      app:borderWidth="0dp"
      app:fabSize="normal"
      style="@style/Style.PYDroid.FloatingActionButton"
      />

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/detail_fab_small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/detail_frame_image"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="-20dp"
      android:layout_toLeftOf="@id/detail_fab"
      android:layout_toStartOf="@id/detail_fab"
      app:borderWidth="0dp"
      app:fabSize="mini"
      style="@style/Style.PYDroid.FloatingActionButton"
      />

</RelativeLayout>
