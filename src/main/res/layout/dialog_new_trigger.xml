<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:id="@+id/new_trigger_toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:layout_alignParentTop="true"
      android:background="?attr/colorPrimary"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/new_trigger_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/blank"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/new_trigger_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/blank"
        />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/new_trigger_button_holder"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal"
      >

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/new_trigger_continue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/blank"
        />

  </LinearLayout>

  <com.pyamsoft.powermanager.app.trigger.create.CreateTriggerNonSwipePager
      android:id="@+id/new_trigger_pager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@id/new_trigger_button_holder"
      android:layout_below="@id/new_trigger_toolbar"
      />

</RelativeLayout>