<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <Button
      android:id="@+id/toggle_wifi_test"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Toggle Wifi"
      />

  <Button
      android:id="@+id/toggle_data_test"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Toggle Data"
      />

  <Button
      android:id="@+id/toggle_bluetooth_test"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Toggle Bluetooth"
      />

  <Button
      android:id="@+id/toggle_sync_test"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Toggle Sync"
      />

  <Button
      android:id="@+id/toggle_all_off"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Toggle All Off"
      />

  <Button
      android:id="@+id/toggle_all_on"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Toggle All On"
      />

</LinearLayout>