<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <com.pyamsoft.pydroid.widget.SquareCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="false"
      android:focusable="false"
      android:longClickable="false"
      app:cardCornerRadius="4dp"
      app:cardElevation="4dp"
      app:cardUseCompatPadding="true"
      >

    <FrameLayout
        android:id="@+id/adapter_item_overview_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overview_scrim"
        />

    <ImageView
        android:id="@+id/adapter_item_overview_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:clickable="false"
        android:contentDescription="@string/blank"
        android:focusable="false"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal"
        >

      <com.pyamsoft.pydroid.widget.NoLeakTextView
          android:id="@+id/adapter_item_overview_title"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clickable="false"
          android:focusable="false"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="@android:color/white"
          />

      <com.pyamsoft.pydroid.widget.SquareImageView
          android:id="@+id/adapter_item_overview_check"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:clickable="false"
          android:contentDescription="@string/blank"
          android:focusable="false"
          tools:src="@drawable/ic_check_box_24dp"
          />

    </LinearLayout>

  </com.pyamsoft.pydroid.widget.SquareCardView>

</layout>