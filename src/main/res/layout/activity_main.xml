<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystem"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <View
        android:id="@+id/statusbar_padding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

      <FrameLayout
          android:id="@+id/fragment_place"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="bottom"
          />

      <View
          android:id="@+id/upshadow"
          android:layout_gravity="bottom"
          style="@style/Style.PYDroid.DropShadow.Up"
          />

      <android.support.design.widget.AppBarLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="top"
          >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

          <android.support.v7.widget.Toolbar
              android:id="@+id/toolbar"
              android:layout_width="match_parent"
              android:layout_height="?attr/actionBarSize"
              android:background="?attr/colorPrimary"
              android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
              app:layout_collapseMode="pin"
              app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
              />

        </android.support.design.widget.CollapsingToolbarLayout>

      </android.support.design.widget.AppBarLayout>

      <View
          android:id="@+id/dropshadow"
          android:layout_gravity="top"
          android:layout_marginTop="?attr/actionBarSize"
          style="@style/Style.PYDroid.DropShadow"
          />

    </android.support.design.widget.CoordinatorLayout>

    <include
        layout="@layout/layout_media_ads"
        android:id="@+id/media_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
  </LinearLayout>

  <include
      layout="@layout/layout_explain"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      />

</merge>
