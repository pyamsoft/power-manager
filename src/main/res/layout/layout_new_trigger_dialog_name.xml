<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

  <android.support.design.widget.TextInputLayout
      android:id="@+id/new_trigger_dialog_name_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      >

    <EditText
        android:id="@+id/new_trigger_dialog_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/trigger_name_hint"
        android:inputType="textCapWords|textAutoCorrect"
        />

  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/new_trigger_dialog_level_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      >

    <EditText
        android:id="@+id/new_trigger_dialog_level_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/trigger_level_hint"
        android:inputType="number"
        />

  </android.support.design.widget.TextInputLayout>

</LinearLayout>
