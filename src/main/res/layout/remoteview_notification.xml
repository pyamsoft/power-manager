<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="12dp"
    >

  <ImageView
      android:id="@+id/remoteview_notification_icon"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/ic_notification_background_oval"
      android:contentDescription="@string/blank"
      android:scaleType="center"
      android:src="@drawable/ic_notification"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:orientation="horizontal"
      android:baselineAligned="false"
      >

    <FrameLayout
        android:id="@+id/remoteview_notification_wifi_touch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/ic_notification_background_touched"
        >

      <ImageView
          android:layout_gravity="center"
          android:id="@+id/remoteview_notification_wifi_image"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:contentDescription="@string/blank"
          />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/remoteview_notification_data_touch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/ic_notification_background_touched"
        >

      <ImageView
          android:layout_gravity="center"
          android:id="@+id/remoteview_notification_data_image"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:contentDescription="@string/blank"
          />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/remoteview_notification_bluetooth_touch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/ic_notification_background_touched"
        >

      <ImageView
          android:layout_gravity="center"
          android:id="@+id/remoteview_notification_bluetooth_image"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:contentDescription="@string/blank"
          />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/remoteview_notification_sync_touch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/ic_notification_background_touched"
        >

      <ImageView
          android:layout_gravity="center"
          android:id="@+id/remoteview_notification_sync_image"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:contentDescription="@string/blank"
          />

    </FrameLayout>

  </LinearLayout>

</LinearLayout>