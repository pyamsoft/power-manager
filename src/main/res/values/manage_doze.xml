<resources>

  <bool name="doze_default">false</bool>
  <string name="manage_doze_key">force_doze</string>
  <string name="manage_doze_title">Force Doze</string>
  <string name="manage_doze_summary_checked">Force the device into Doze mode after the screen turns off (Marshmallow only)</string>
  <string name="manage_doze_summary_unchecked">The device will enter Doze after about 30 minutes of inactivity</string>

  <string name="preset_delay_doze_key">preset_delay_doze</string>
  <string-array name="preset_delay_doze_names">
    <item name="delay_0">No delay</item>
    <item name="delay_5">5 Seconds</item>
    <item name="delay_10">10 Seconds</item>
    <item name="delay_15">15 Seconds</item>
    <item name="delay_30">30 Seconds</item>
    <item name="delay_60">1 Minute</item>
    <item name="delay_120">2 Minutes</item>
    <item name="delay_300">5 Minutes</item>
    <item name="delay_600">10 Minutes</item>
  </string-array>

  <string-array name="preset_delay_doze_values">
    <item name="delay_0">0</item>
    <item name="delay_5">5</item>
    <item name="delay_10">10</item>
    <item name="delay_15">15</item>
    <item name="delay_30">30</item>
    <item name="delay_60">60</item>
    <item name="delay_120">120</item>
    <item name="delay_300">300</item>
    <item name="delay_600">600</item>
  </string-array>

  <string name="doze_time_default">15</string>
  <string name="doze_time_key">doze_time</string>
  <string name="doze_time_title">Doze Delay</string>
  <string name="doze_time_summary">Amount of time to wait after screen turns off before entering Doze (Android will Doze after 30 minutes)</string>

  <bool name="ignore_charging_doze_default">true</bool>
  <string name="ignore_charging_doze_key">ignore_charging_doze</string>
  <string name="ignore_charging_doze_title">Ignore When Charging</string>
  <string name="ignore_charging_doze_summary_checked">Ignore Doze while device is charging (Marshmallow only)</string>
  <string name="ignore_charging_doze_summary_unchecked">Run Doze even while device is charging</string>

  <bool name="sensors_doze_default">false</bool>
  <string name="sensors_doze_key">sensors_doze</string>
  <string name="sensors_doze_title">Doze Device Sensors</string>
  <string name="sensors_doze_summary_checked">Prevent device from waking out of Doze due to movement. EXPERIMENTAL (Marshmallow only)</string>
  <string name="sensors_doze_summary_unchecked">Device will Doze normally, and be awoken with movement</string>

  <bool name="exclusive_doze_default">false</bool>
  <string name="exclusive_doze_key">exclusive_doze</string>
  <string name="exclusive_doze_title">Exclusive Doze</string>
  <string name="exclusive_doze_summary_checked">All radios will be managed by Doze state instead of individually (Marshmallow only)</string>
  <string name="exclusive_doze_summary_unchecked">All radios will be managed individually as normal instead of by Doze state</string>
</resources>