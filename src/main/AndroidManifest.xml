<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyamsoft.powermanager">

  <!-- For WiFi -->
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
  <!-- For Data -->
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
  <!-- For Bluetooth -->
  <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
  <uses-permission android:name="android.permission.BLUETOOTH"/>
  <!-- For Sync -->
  <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
  <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

  <!-- For Boot Receiver -->
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

  <application
      android:name=".PowerManager"
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="false"
      android:theme="@style/Theme.PowerManager.Light">

    <!-- Main Activity -->
    <activity
        android:name=".app.main.MainActivity"
        android:label="@string/app_name"
        android:theme="@style/Theme.PowerManager.Light.Splash">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!-- Job Scheduling with GCM -->
    <service
        android:name=".app.service.PowerManagerFrameworkJobSchedulerService"
        android:permission="android.permission.BIND_JOB_SERVICE"/>`
    <service
        android:name=".app.service.PowerManagerGCMJobSchedulerService"
        android:exported="true"
        android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
      <intent-filter>
        <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY"/>
      </intent-filter>
    </service>

  </application>
</manifest>
