<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pyamsoft.powermanager">

  <!-- To call dumpsys command for Doze -->
  <uses-permission
      android:name="android.permission.DUMP"
      tools:ignore="ProtectedPermissions"/>

  <!-- For WiFi -->
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
  <!-- For Data -->
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
  <!-- For Bluetooth -->
  <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
  <uses-permission android:name="android.permission.BLUETOOTH"/>
  <!-- For Sync -->
  <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
  <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

  <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

  <!-- For Boot Receiver -->
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

  <application
      android:name=".PowerManager"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/Theme.PowerManager.Light">

    <!-- Main Activity -->
    <activity
        android:name=".app.main.MainActivity"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:theme="@style/Theme.PowerManager.Light.Splash">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!-- Service -->
    <service
        android:name=".app.service.ForegroundService"
        android:exported="false"/>

    <receiver
        android:name=".app.receiver.BootReceiver"
        android:enabled="false"
        android:exported="false">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED"/>
      </intent-filter>
    </receiver>

    <service
        android:name=".app.service.ActionToggleService"
        android:exported="false"/>

    <provider
        android:name=".PowerManagerSingleInitProvider"
        android:authorities="com.pyamsoft.powermanager.PowerManagerSingleInitProvider"
        android:exported="false"
        android:syncable="false"/>

  </application>
</manifest>
