<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyamsoft.powermanager">

  <!-- For Billing Service -->
  <uses-permission android:name="com.android.vending.BILLING"/>

  <!-- For WiFi -->
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
  <!-- For Data -->
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
  <!-- For Bluetooth -->
  <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
  <uses-permission android:name="android.permission.BLUETOOTH"/>
  <!-- For Sync -->
  <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
  <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

  <!-- For Boot Receiver -->
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

  <application
      android:name=".PowerManager"
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="false"
      android:theme="@style/Theme.PowerManager.Light">

    <!-- Main Activity -->
    <activity
        android:name=".app.main.MainActivity"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:theme="@style/Theme.PowerManager.Light.Splash">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!-- Crash Log Activitiy -->
    <activity
        android:name="com.pyamsoft.pydroid.crash.CrashLogActivity"
        android:excludeFromRecents="true"
        android:exported="false"
        android:launchMode="singleInstance"
        android:windowSoftInputMode="stateHidden">
      <intent-filter>
        <action android:name="com.pyamsoft.powermanager.crash.SEND_LOG"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <!-- Job Scheduling -->
    <service
        android:name=".app.service.job.PowerManagerFrameworkJobSchedulerService"
        android:permission="android.permission.BIND_JOB_SERVICE"/>`
    <service
        android:name=".app.service.job.PowerManagerGCMJobSchedulerService"
        android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
      <intent-filter>
        <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY"/>
      </intent-filter>
    </service>

    <!-- Service -->
    <service android:name=".app.service.ForegroundService"/>

    <receiver
        android:name=".app.receiver.BootReceiver"
        android:enabled="false"
        android:exported="false">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED"/>
      </intent-filter>
    </receiver>

    <!-- Crash Log Provider -->
    <provider
        android:name="android.support.v4.content.FileProvider"
        android:authorities="com.pyamsoft.powermanager.crash.LOG_PROVIDER"
        android:exported="false"
        android:grantUriPermissions="true">
      <meta-data
          android:name="android.support.FILE_PROVIDER_PATHS"
          android:resource="@xml/crashlog_provider"/>
    </provider>

  </application>
</manifest>
