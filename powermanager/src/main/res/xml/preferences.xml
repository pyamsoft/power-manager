<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:title="Service Settings">

    <!--suppress AndroidElementNotAllowed -->
    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="@bool/default_ignore_phone_call"
        android:key="@string/key_ignore_phone_call"
        android:summaryOff="@string/ignore_phone_call_summary_off"
        android:summaryOn="@string/ignore_phone_call_summary_on"
        android:title="@string/ignore_phone_call_title"
        />

    <!--suppress AndroidElementNotAllowed -->
    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="@bool/unsuspend_when_open_default"
        android:key="@string/unsuspend_when_open_key"
        android:summaryOff="@string/unsuspend_when_open_summary_off"
        android:summaryOn="@string/unsuspend_when_open_summary_on"
        android:title="@string/unsuspend_when_open_title"
        />

    <!--suppress AndroidElementNotAllowed -->
    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="@bool/use_root_default"
        android:key="@string/use_root_key"
        android:summaryOff="@string/use_root_summary_off"
        android:summaryOn="@string/use_root_summary_on"
        android:title="@string/use_root_title"
        />

    <Preference
        android:key="@string/clear_db_key"
        android:summary="@string/clear_db_summary"
        android:title="@string/clear_db_title"/>

  </PreferenceCategory>

</PreferenceScreen>