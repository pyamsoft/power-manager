<layout>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/material_light_background"
      android:orientation="vertical"
      android:paddingBottom="8dp"
      android:paddingEnd="8dp"
      android:paddingStart="24dp"
      android:paddingTop="8dp"
      >

    <RadioGroup
        android:id="@+id/delay_radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <RadioButton
          android:id="@+id/delay_radio_five"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="5 Seconds"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <RadioButton
          android:id="@+id/delay_radio_ten"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="10 Seconds"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <RadioButton
          android:id="@+id/delay_radio_fifteen"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="15 Seconds"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <RadioButton
          android:id="@+id/delay_radio_thirty"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="30 Seconds"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <RadioButton
          android:id="@+id/delay_radio_fourtyfive"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="45 Seconds"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <RadioButton
          android:id="@+id/delay_radio_sixty"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="1 Minute"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <RadioButton
          android:id="@+id/delay_radio_ninety"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="1 Minute 30 Seconds"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <RadioButton
          android:id="@+id/delay_radio_onetwenty"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="2 Minutes"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

      <RadioButton
          android:id="@+id/delay_radio_custom"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:gravity="center_vertical"
          android:text="Custom Time"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <com.pyamsoft.pydroid.ui.widget.NoLeakEditText
          android:id="@+id/delay_input_custom"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:gravity="center_vertical|start"
          />

    </LinearLayout>

  </LinearLayout>
</layout>