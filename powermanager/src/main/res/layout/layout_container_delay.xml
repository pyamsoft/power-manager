<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_light_background"
    android:orientation="vertical"
    android:padding="8dp"
    >

  <RadioGroup
      android:id="@+id/delay_radio_group"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <RadioButton
        android:id="@+id/delay_radio_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <RadioButton
        android:id="@+id/delay_radio_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <RadioButton
        android:id="@+id/delay_radio_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <RadioButton
        android:id="@+id/delay_radio_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <RadioButton
        android:id="@+id/delay_radio_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <RadioButton
        android:id="@+id/delay_radio_six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <RadioButton
        android:id="@+id/delay_radio_seven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <RadioButton
        android:id="@+id/delay_radio_eight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

  </RadioGroup>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      >

    <RadioButton
        android:id="@+id/delay_radio_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:text="@string/custom_time"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <com.pyamsoft.pydroid.ui.widget.NoLeakEditText
        android:id="@+id/delay_input_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical|start"
        />

  </LinearLayout>

</LinearLayout>
