<layout>

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/material_light_background"
      android:orientation="vertical"
      android:paddingBottom="8dp"
      android:paddingEnd="8dp"
      android:paddingStart="24dp"
      android:paddingTop="8dp"
      >

    <CheckBox
        android:id="@+id/exception_wear_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Do not manage WiFi"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <CheckBox
        android:id="@+id/exception_wear_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Do not manage Mobile Data"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <CheckBox
        android:id="@+id/exception_wear_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Do not manage Bluetooth"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <CheckBox
        android:id="@+id/exception_wear_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Do not manage Auto Sync"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <CheckBox
        android:id="@+id/exception_wear_airplane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Do not manage Airplane Mode"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <CheckBox
        android:id="@+id/exception_wear_doze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Do not manage Doze Mode"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

  </LinearLayout>

</layout>