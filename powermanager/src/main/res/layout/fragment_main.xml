<layout>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomtabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/material_light_background"
        app:itemIconTint="@drawable/bottom_nav_state"
        app:itemTextColor="@drawable/bottom_nav_state"
        app:menu="@menu/navigation_menu"
        />

    <View
        android:id="@+id/bottomtabs_scrim"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@id/bottomtabs"
        android:background="@drawable/bottom_nav_scrim"
        />

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomtabs_scrim"
        android:layout_alignParentTop="true"
        />

  </RelativeLayout>
</layout>