<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/new_trigger_toolbar"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="?attr/colorPrimary"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/new_trigger_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="@string/blank"
        android:scaleType="center"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/new_trigger_close"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="@string/blank"
        android:scaleType="center"
        />

  </LinearLayout>

  <com.pyamsoft.powermanager.trigger.create.CreateTriggerNonSwipePager
      android:id="@+id/new_trigger_pager"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      />

  <LinearLayout
      android:id="@+id/new_trigger_button_holder"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:orientation="horizontal"
      >

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/new_trigger_continue"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_arrow_forward_oval"
        android:contentDescription="@string/blank"
        android:scaleType="center"
        />

  </LinearLayout>

</LinearLayout>
