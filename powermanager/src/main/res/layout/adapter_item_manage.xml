<layout>
  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:animateLayoutChanges="true"
      app:cardBackgroundColor="@android:color/white"
      app:cardCornerRadius="4dp"
      app:cardElevation="2dp"
      app:cardMaxElevation="6dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <LinearLayout
          android:id="@+id/manage_title_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:padding="16dp"
          >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/manage_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <com.pyamsoft.pydroid.ui.widget.SquareImageView
            android:id="@+id/manage_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />

      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:padding="8dp"
          android:text="@string/manage_desc"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <LinearLayout
          android:id="@+id/manage_container_expandable"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/material_light_background"
          android:orientation="vertical"
          android:paddingBottom="8dp"
          android:paddingEnd="8dp"
          android:paddingStart="24dp"
          android:paddingTop="8dp"
          android:visibility="gone"
          >

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/manage_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/manage_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/manage_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/manage_sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/manage_airplane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/manage_doze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

      </LinearLayout>

    </LinearLayout>

  </android.support.v7.widget.CardView>
</layout>