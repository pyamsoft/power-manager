<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="6dp"
    app:cardUseCompatPadding="true"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/expander_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:text="@string/manage_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />

    <TextView
        android:id="@+id/expander_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="@string/manage_desc"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_light_background"
        android:orientation="vertical"
        android:padding="8dp"
        >

      <Switch
          android:id="@+id/manage_wifi"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

      <Switch
          android:id="@+id/manage_data"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

      <Switch
          android:id="@+id/manage_bluetooth"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

      <Switch
          android:id="@+id/manage_sync"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

      <Switch
          android:id="@+id/manage_airplane"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

      <Switch
          android:id="@+id/manage_doze"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

      <Switch
          android:id="@+id/manage_data_saver"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

    </LinearLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>
