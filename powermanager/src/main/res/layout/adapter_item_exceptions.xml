<layout>
  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:cardBackgroundColor="@android:color/white"
      app:cardCornerRadius="4dp"
      app:cardElevation="2dp"
      app:cardMaxElevation="6dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:padding="8dp"
          android:text="@string/exceptions_title"
          android:textAppearance="@style/TextAppearance.AppCompat.Large"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:padding="8dp"
          android:text="@string/exceptions_desc"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:padding="8dp"
          android:text="@string/if_device_is"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          android:textStyle="bold"
          />

      <com.pyamsoft.powermanager.uicore.ExpanderView
          android:id="@+id/exception_charging_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/material_light_background"
          android:paddingBottom="8dp"
          android:paddingEnd="0dp"
          android:paddingStart="8dp"
          android:paddingTop="8dp"
          />

      <com.pyamsoft.powermanager.uicore.ExpanderView
          android:id="@+id/exception_wear_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/material_light_background"
          android:paddingBottom="8dp"
          android:paddingEnd="0dp"
          android:paddingStart="8dp"
          android:paddingTop="8dp"
          />

    </LinearLayout>

  </android.support.v7.widget.CardView>
</layout>