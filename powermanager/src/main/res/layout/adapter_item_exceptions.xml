<layout>
  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:cardBackgroundColor="@android:color/white"
      app:cardCornerRadius="4dp"
      app:cardElevation="2dp"
      app:cardMaxElevation="6dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:padding="8dp"
          android:text="@string/exceptions_title"
          android:textAppearance="@style/TextAppearance.AppCompat.Large"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:padding="8dp"
          android:text="@string/exceptions_desc"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/material_light_background"
          android:orientation="vertical"
          android:paddingBottom="8dp"
          android:paddingEnd="8dp"
          android:paddingStart="8dp"
          android:paddingTop="8dp"
          >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Charging"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            >

          <CheckBox
              android:id="@+id/exception_charging_wifi"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage WiFi"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

          <CheckBox
              android:id="@+id/exception_charging_data"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage Mobile Data"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

          <CheckBox
              android:id="@+id/exception_charging_bluetooth"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage Bluetooth"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

          <CheckBox
              android:id="@+id/exception_charging_sync"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage Auto Sync"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

          <CheckBox
              android:id="@+id/exception_charging_airplane"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage Airplane Mode"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

          <CheckBox
              android:id="@+id/exception_charging_doze"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage Doze Mode"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/material_light_background"
          android:orientation="vertical"
          android:paddingBottom="8dp"
          android:paddingEnd="8dp"
          android:paddingStart="8dp"
          android:paddingTop="8dp"
          >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Connected to Android Wear"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            >

          <CheckBox
              android:id="@+id/exception_wear_wifi"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage WiFi"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

          <CheckBox
              android:id="@+id/exception_wear_data"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage Mobile Data"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

          <CheckBox
              android:id="@+id/exception_wear_bluetooth"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage Bluetooth"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

          <CheckBox
              android:id="@+id/exception_wear_airplane"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage Airplane Mode"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

          <CheckBox
              android:id="@+id/exception_wear_doze"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:text="Do not manage Doze Mode"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              />

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

  </android.support.v7.widget.CardView>
</layout>