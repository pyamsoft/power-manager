<layout>

  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp"
      >

    <LinearLayout
        android:id="@+id/trigger_create_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:text="Name: "
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

      <com.pyamsoft.pydroid.ui.widget.NoLeakEditText
          android:id="@+id/trigger_create_name_entry"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:hint="Trigger Name"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          />

    </LinearLayout>

    <TextView
        android:id="@+id/trigger_create_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/trigger_create_name"
        android:text="WiFi"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <RadioGroup
        android:id="@+id/trigger_create_wifi_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/trigger_create_wifi"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >

      <RadioButton
          android:id="@+id/trigger_create_wifi_none"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Nothing"
          />

      <RadioButton
          android:id="@+id/trigger_create_wifi_on"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="On"
          />

      <RadioButton
          android:id="@+id/trigger_create_wifi_off"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Off"
          />

    </RadioGroup>

    <TextView
        android:id="@+id/trigger_create_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/trigger_create_wifi_group"
        android:text="Data"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <RadioGroup
        android:id="@+id/trigger_create_data_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/trigger_create_data"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >

      <RadioButton
          android:id="@+id/trigger_create_data_none"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Nothing"
          />

      <RadioButton
          android:id="@+id/trigger_create_data_on"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="On"
          />

      <RadioButton
          android:id="@+id/trigger_create_data_off"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Off"
          />

    </RadioGroup>

    <TextView
        android:id="@+id/trigger_create_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/trigger_create_data_group"
        android:text="Bluetooth"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <RadioGroup
        android:id="@+id/trigger_create_bluetooth_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/trigger_create_bluetooth"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >

      <RadioButton
          android:id="@+id/trigger_create_bluetooth_none"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Nothing"
          />

      <RadioButton
          android:id="@+id/trigger_create_bluetooth_on"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="On"
          />

      <RadioButton
          android:id="@+id/trigger_create_bluetooth_off"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Off"
          />

    </RadioGroup>

    <TextView
        android:id="@+id/trigger_create_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/trigger_create_bluetooth_group"
        android:text="Sync"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <RadioGroup
        android:id="@+id/trigger_create_sync_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/trigger_create_sync"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        >

      <RadioButton
          android:id="@+id/trigger_create_sync_none"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Nothing"
          />

      <RadioButton
          android:id="@+id/trigger_create_sync_on"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="On"
          />

      <RadioButton
          android:id="@+id/trigger_create_sync_off"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Off"
          />

    </RadioGroup>

    <Button
        android:id="@+id/trigger_create_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/trigger_create_sync_group"
        android:gravity="center"
        android:text="@string/confirm"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        />

    <Button
        android:id="@+id/trigger_create_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trigger_create_sync_group"
        android:layout_toStartOf="@id/trigger_create_confirm"
        android:gravity="center"
        android:text="@string/cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

  </RelativeLayout>

</layout>
